<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Leave.
    -->
    <changeSet id="20231122001029-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="workflow_id"
                                 baseTableName="leave"
                                 constraintName="fk_leave__workflow_id"
                                 referencedColumnNames="id"
                                 referencedTableName="workflow"
                                 />

        <addForeignKeyConstraint baseColumnNames="attachment_id"
                                 baseTableName="leave"
                                 constraintName="fk_leave__attachment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="attachment"
                                 />

        <addForeignKeyConstraint baseColumnNames="sentto_id"
                                 baseTableName="leave"
                                 constraintName="fk_leave__sentto_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"
                                 />
    </changeSet>
</databaseChangeLog>
